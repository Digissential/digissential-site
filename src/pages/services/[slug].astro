---
import Base from '@layouts/Base.astro';
import Breadcrumbs from '@components/Breadcrumbs.astro';
import Button from '@components/Button.astro';
import { getEntryBySlug } from 'astro:content';

const { slug } = Astro.params;
const entry = await getEntryBySlug('services', slug);
if (!entry) return Astro.redirect('/services');

const { data } = entry;
const { Content } = await entry.render();
const pageTitle = `${data.title} — Digissential`;

const site = Astro.site?.toString?.() || 'https://www.digissential.co.za';
const url = `${site}/services/${slug}`;
const desc = (data.bullets && data.bullets[0]) || `${data.title} in Stellenbosch.`;
const priceNum = Number((data.price || '').replace(/[^\d.]/g, '')) || undefined;

const serviceLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  "@id": `${url}#service`,
  "name": data.title,
  "serviceType": "Computer repair & IT support",
  "description": desc,
  "url": url,
  "areaServed": { "@type": "City", "name": "Stellenbosch" },
  "provider": { "@id": `${site}#localbusiness` },
  "offers": {
    "@type": "Offer",
    ...(priceNum ? { "priceCurrency": "ZAR", "price": priceNum } : {}),
    "availability": "https://schema.org/InStock",
    "url": url
  }
};

const faqLd = (data.faq && data.faq.length)
  ? {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": data.faq.map((f) => ({
        "@type": "Question", "name": f.q,
        "acceptedAnswer": { "@type": "Answer", "text": f.a }
      }))
    }
  : null;

  const pageCrumbs = [
  { href: '/services', label: 'Services' },
  { href: `/services/${slug}`, label: data.title },
];
---


<Base title={pageTitle} description={`${data.title} in Stellenbosch. Transparent pricing and fast turnaround.`} ogImage="/favicon.svg">
  <main class="container-prose pt-28">
    <Breadcrumbs items={[
      { href: '/', label: 'Home' },
      { href: '/services', label: 'Services' },
      { href: Astro.url.pathname, label: data.title }
    ]} />

    <h1 class="text-3xl sm:text-4xl font-extrabold">{data.title}</h1>
    <p class="mt-2 text-white/80">Serving Stellenbosch & surrounds • Transparent pricing • POPIA‑aligned</p>

    <div class="mt-6 grid gap-6 md:grid-cols-3">
      <section class="md:col-span-2 card p-6 prose prose-invert">
        <h2>What’s included</h2>
        <ul>
          {data.bullets.map((b) => <li>{b}</li>)}
        </ul>
        <h2>Details</h2>

        {data.faq && data.faq.length > 0 && (
         <section class="card p-6 mt-6">
            <h2 class="text-xl font-bold mb-3">FAQ</h2>
            <ul class="space-y-4">
              {data.faq.map((f) => (
                <li>
                  <p class="font-semibold">{f.q}</p>
                  <p class="text-white/80">{f.a}</p>
                </li>
              ))}
            </ul>
          </section>
        )}

      <aside class="card p-6 h-max">
        <p class="text-sm text-white/60">From</p>
        <p class="text-4xl font-extrabold text-digi-primary">{data.price}</p>
        <div class="mt-4 grid gap-2">
          <Button href="/contact">Get a free quote</Button>
          <Button href="tel:+27664256314" variant="secondary">Call now</Button>
        </div>
        <p class="mt-4 text-xs text-white/60">Turnaround depends on parts, updates, and queue.</p>
      </aside>
    </div>
  </main>


  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Service",
      "name": data.title,
      "areaServed": "Stellenbosch",
      "provider": {
        "@type": "LocalBusiness",
        "name": "Digissential",
        "telephone": "+27 66 425 6314",
        "url": site
      },
      "offers": {
        "@type": "Offer",
        "price": data.price.replace(/[^0-9.]/g, ""),
        "priceCurrency": "ZAR",
        "url": url,
        "availability": "https://schema.org/InStock"
      }
    })}
  </script>

   <script type="application/ld+json">{JSON.stringify(serviceLd)}</script>
    {faqLd && <script type="application/ld+json">{JSON.stringify(faqLd)}</script>}

</Base>
