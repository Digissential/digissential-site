---
interface Props {
  kind?: 'primary' | 'info' | 'warning' | 'success';
  title?: string;
}

const { kind = 'primary', title } = Astro.props;

const tone: Record<string, string> = {
  primary: 'border-digi-primary/40 bg-digi-primary/10',
  info:    'border-sky-400/40 bg-sky-400/10',
  warning: 'border-amber-400/40 bg-amber-400/10',
  success: 'border-emerald-400/40 bg-emerald-400/10',
};
---

<div
  role="note"
  class={`card p-4 md:p-5 border ${tone[kind] ?? tone.primary}`}
>
  {title && <h3 class="text-lg font-semibold mb-1">{title}</h3>}
  <slot />
</div>
