---
interface Props { id?: string; title?: string; eyebrow?: string; description?: string }
const { id, title, eyebrow, description } = Astro.props as Props;
---
<section id={id} class="py-16 sm:py-24">
  <div class="container-prose">
    {eyebrow && <p class="mb-2 text-sm font-semibold uppercase tracking-wider text-digi-primary/90">{eyebrow}</p>}
    {title && <h2 class="mb-4 text-3xl sm:text-4xl font-extrabold">{title}</h2>}
    {description && <p class="mb-10 text-white/70 max-w-3xl">{description}</p>}
    <div class="grid gap-6">
      <slot />
    </div>
  </div>
</section>
