const ld = {
  "@context": "https://schema.org",
  "@type": ["LocalBusiness","ProfessionalService"],
  "@id": `${site}#localbusiness`,
  "name": "Digissential",
  "url": site,
  "telephone": "+27 66 425 6314",
  "email": "digissentialteam@gmail.com",
  "image": `${site}/assets/logo.svg`,
  "logo": `${site}/assets/logo.svg`,
  "description": "Computer repair & IT support in Stellenbosch: Windows installs, data recovery, malware removal, upgrades, and remote help.",
  "priceRange": "R",
  "contactPoint": [{
    "@type": "ContactPoint",
    "telephone": "+27 66 425 6314",
    "contactType": "customer support",
    "areaServed": "ZA",
