---
const year = new Date().getFullYear();

const SOCIAL = {
  facebook:  "https://www.facebook.com/profile.php?id=61580005651505",
  instagram: "https://www.instagram.com/digi.ssential/",
  x:         "https://x.com/Digi_ssential",
  youtube:   "https://www.youtube.com/channel/UCJGDwg2FGiwAButfLsLyNtg",
  tiktok:    "https://www.tiktok.com/@digissential",
};
---
<footer class="mt-10 md:mt-12 border-t border-white/5 bg-digi-ink/40">
  <!-- main footer -->
  <div class="container-prose py-6 md:py-8">
    <div class="grid gap-8 md:gap-10 md:grid-cols-4 items-start">
      <!-- Brand -->
      <div>
        <a href="/" class="inline-flex items-center gap-2">
          <img src="/LogoFooter.png" alt="" class="h-10 w-10" />
          <span class="font-extrabold tracking-wide">DIGISSENTIAL</span>
        </a>
        <p class="mt-3 text-white/70 text-sm max-w-xs">
          Keeping your tech essentials perfect. Computer repairs &amp; IT support in Stellenbosch.
        </p>

        <!-- Socials -->
        <div class="mt-4 flex items-center gap-3" aria-label="Social links">
          <!-- Common button style -->
          <!-- Facebook -->
          <a href={SOCIAL.facebook} target="_blank" rel="me noopener noreferrer" aria-label="Facebook"
             class="inline-grid h-10 w-10 place-items-center rounded-full border border-white/10 bg-white/5 hover:border-white/20 hover:bg-white/10">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 2h-3a4 4 0 0 0-4 4v3H8v4h3v9h4v-9h3.5L19 9h-4V6a1 1 0 0 1 1-1h2z"/>
            </svg>
          </a>

          <!-- Instagram -->
          <a href={SOCIAL.instagram} target="_blank" rel="me noopener noreferrer" aria-label="Instagram"
             class="inline-grid h-10 w-10 place-items-center rounded-full border border-white/10 bg-white/5 hover:border-white/20 hover:bg-white/10">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="5"/>
              <circle cx="12" cy="12" r="4"/>
              <path d="M17.5 6.5h.01"/>
            </svg>
          </a>

          <!-- X (formerly Twitter) – more brand-like "X" -->
          <a href={SOCIAL.x} target="_blank" rel="me noopener noreferrer" aria-label="X"
             class="inline-grid h-10 w-10 place-items-center rounded-full border border-white/10 bg-white/5 hover:border-white/20 hover:bg-white/10">
            <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
              <path fill="currentColor"
                d="M17.53 2.5h3.02l-7.02 8.01L22 21.5h-5.84l-4.57-6.01-5.23 6.01H3.34l7.5-8.6L2 2.5h6.03l4.12 5.54 5.38-5.54z"/>
            </svg>
          </a>

          <!-- YouTube -->
          <a href={SOCIAL.youtube} target="_blank" rel="me noopener noreferrer" aria-label="YouTube"
             class="inline-grid h-10 w-10 place-items-center rounded-full border border-white/10 bg-white/5 hover:border-white/20 hover:bg-white/10">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linejoin="round">
              <rect x="2.5" y="6" width="19" height="12" rx="3"/>
              <path d="M10 9.5 15.5 12 10 14.5Z" fill="currentColor" stroke="none"/>
            </svg>
          </a>

          <!-- TikTok – recognisable note + tail -->
          <a href={SOCIAL.tiktok} target="_blank" rel="me noopener noreferrer" aria-label="TikTok"
             class="inline-grid h-10 w-10 place-items-center rounded-full border border-white/10 bg-white/5 hover:border-white/20 hover:bg-white/10">
            <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
              <!-- stem -->
              <path d="M11 3v10.2a3.3 3.3 0 1 1-3.3-3.3c.37 0 .72.06 1.05.18V7.4A6.6 6.6 0 1 0 14.6 14V9.7c1.1 1 2.52 1.69 4.1 1.8V8.5c-1.62-.08-3.03-.73-4.1-1.7A5.4 5.4 0 0 1 13 3h-2Z" fill="currentColor"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Company -->
      <nav>
        <h3 class="font-semibold">Company</h3>
        <ul class="mt-3 grid gap-2 text-white/80">
          <li><a class="hover:text-white" href="/services/">Services</a></li>
          <li><a class="hover:text-white" href="/blog/">Blog</a></li>
          <li><a class="hover:text-white" href="/contact/">Contact</a></li>
          <li><a class="hover:text-white" href="/newsletter/">Newsletter</a></li>
        </ul>
      </nav>

      <!-- Contact -->
      <div>
        <h3 class="font-semibold">Contact</h3>
        <ul class="mt-3 grid gap-2 text-white/80">
          <li>Phone: <a class="link-fancy" href="tel:+27664256314">066 425 6314</a></li>
          <li>Email: <a class="link-fancy" href="mailto:digissentialteam@gmail.com">digissentialteam@gmail.com</a></li>
          <li>Stellenbosch, South Africa</li>
        </ul>
      </div>

      <!-- Policies -->
      <nav>
        <h3 class="font-semibold">Policies</h3>
        <ul class="mt-3 grid gap-2 text-white/80">
          <li><a class="hover:text-white" href="/legal/privacy/">Privacy (POPIA)</a></li>
          <li><a class="hover:text-white" href="/legal/warranty/">Warranty &amp; Returns</a></li>
          <li><a class="hover:text-white" href="/legal/ewaste/">E-waste &amp; Safety</a></li>
          <li><a class="hover:text-white" href="/legal/">All policies</a></li>
        </ul>
      </nav>
    </div>
  </div>

  <!-- sub-footer: full width line + centered text -->
  <div class="border-t border-white/5">
    <div class="container-prose py-3 md:py-4">
      <p class="text-sm text-white/60 text-center">© {year} Digissential. All rights reserved.</p>
    </div>
  </div>
</footer>