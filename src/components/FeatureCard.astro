---
interface Props { title: string; body: string }
const { title, body } = Astro.props as Props;
---
<article class="card p-6">
  <div class="flex items-start gap-4">
    <div class="shrink-0 rounded-xl2 bg-white/5 border border-white/10 p-3">
      <slot name="icon" />
    </div>
    <div>
      <h3 class="text-lg font-semibold">{title}</h3>
      <p class="mt-2 text-sm text-white/70">{body}</p>
    </div>
  </div>
</article>
