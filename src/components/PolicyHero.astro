---
interface Props {
  title: string;
  subtitle?: string;
  badges?: string[]; // small highlight chips
}
const { title, subtitle = '', badges = [] } = Astro.props as Props;
---
<section class="relative isolate overflow-hidden pt-24 pb-10 sm:pt-28 sm:pb-12">
  <!-- Brand gradient flourish -->
  <div class="pointer-events-none absolute inset-0 -z-10 bg-gradient-to-b from-digi-bg via-digi-ink/60 to-transparent"></div>
  <div class="pointer-events-none absolute -top-24 right-[-10%] h-[28rem] w-[28rem] rounded-full opacity-30"
       style="background: radial-gradient(42% 42% at 50% 50%, rgba(47,123,255,.35), transparent 60%);"></div>
  <div class="pointer-events-none absolute -top-16 left-[-10%] h-[22rem] w-[22rem] rounded-full opacity-25"
       style="background: radial-gradient(42% 42% at 50% 50%, rgba(255,107,61,.28), transparent 60%);"></div>

  <div class="container-prose">
    <div class="flex items-start gap-4">
      <!-- Icon slot -->
      <div class="shrink-0 inline-flex h-12 w-12 items-center justify-center rounded-2xl border border-white/10 bg-white/5">
        <slot name="icon" />
      </div>

      <div>
        <h1 class="text-3xl sm:text-4xl font-extrabold leading-tight">{title}</h1>
        {subtitle && <p class="mt-2 text-white/70 max-w-2xl">{subtitle}</p>}

        {badges.length > 0 && (
          <div class="mt-3 flex flex-wrap gap-2">
            {badges.map((b) => (
              <span class="inline-flex items-center rounded-xl2 border border-white/10 bg-white/5 px-2 py-1 text-xs text-white/80">{b}</span>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</section>
